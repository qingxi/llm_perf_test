# Copy this file to .env and customize values. Environment variables are optional
# All flags can still be overridden via CLI arguments.

# API base URL
LLM_URL=https://<your-api-url>/v1

# API key (never commit your real key)
LLM_API_KEY=sk-REDACTED

# Default model name
LLM_MODEL=gpt-4

# Concurrency controls
LLM_CONCURRENT=0
LLM_REQUEST_DELAY_SECONDS=0
LLM_REQUEST_TIMEOUT=300

# Feature toggles
LLM_VERIFY_SSL=false
LLM_USE_STREAMING=false
LLM_USE_COMMON_PROMPT=false

# Testing dataset directory
LLM_TEST_DATASET_DIR=./llm_perf_test/datasets

# Optional API version for Azure/OpenAI-compatible endpoints
LLM_API_VERSION=2024-02-15
